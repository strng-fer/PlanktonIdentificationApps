<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="150"
    android:exitFadeDuration="150">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/save_green_dark"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20FFFFFF"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/save_green"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="@color/save_green_dark"/>
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/save_green"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
