<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_rounded_background">

    <!-- Current Prediction Display -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Klasifikasi Saat Ini:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/currentPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copepod"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/currentConfidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tingkat Kepercayaan: 85%"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="16dp" />

    <!-- Feedback Radio Group (HistoryActivity) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apakah klasifikasi ini benar?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/feedbackRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/correctRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benar - Klasifikasi sesuai"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/incorrectRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salah - Klasifikasi tidak sesuai"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/neutralRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak yakin"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:padding="8dp" />

    </RadioGroup>

    <!-- Correct Class Input (HistoryActivity) -->
    <TextView
        android:id="@+id/correctClassLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jika salah, pilih kelas yang benar:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/correctClassSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/spinner_background"
        android:visibility="gone" />

    <!-- Feedback Text Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berikan feedback Anda:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/feedbackComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan komentar Anda tentang hasil klasifikasi ini..."
        android:minLines="3"
        android:maxLines="5"
        android:gravity="top|start"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine|textCapSentences" />

    <!-- Alternative ID for HistoryActivity -->
    <EditText
        android:id="@+id/feedbackEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan komentar Anda tentang hasil klasifikasi ini..."
        android:minLines="3"
        android:maxLines="5"
        android:gravity="top|start"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine|textCapSentences"
        android:visibility="gone" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batal"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_outline_primary"
            android:layout_marginEnd="8dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kirim"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
