<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="24dp">

    <!-- Header with Logo and App Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="PlanktonScan Logo"
            android:src="@mipmap/icon_only" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="PlanktoScan"
            android:textColor="#093266"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang!"
            android:textColor="#424242"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Description Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F9FA"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi AI untuk klasifikasi plankton dengan teknologi Deep Learning terdepan."
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Features List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_camera_capture"
                    android:layout_marginEnd="12dp"
                    android:tint="#1565C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambil foto dengan kamera berkualitas tinggi"
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_gallery"
                    android:layout_marginEnd="12dp"
                    android:tint="#1565C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih gambar dari galeri perangkat"
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_model_ai"
                    android:layout_marginEnd="12dp"
                    android:tint="#1565C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klasifikasi AI dengan tingkat akurasi tinggi"
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Feature 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_save"
                    android:layout_marginEnd="12dp"
                    android:tint="#1565C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan hasil dengan nama otomatis"
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Tips Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="12dp"
            android:tint="#1976D2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ’¡ Tips: Pastikan gambar plankton terlihat jelas dan fokus untuk hasil klasifikasi yang optimal!"
            android:textColor="#1976D2"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Action Button -->
    <Button
        android:id="@+id/welcomeStartButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/button_primary"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Mulai Menggunakan PlanktoScan"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
